<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MediaViewer" x:Class="MediaViewer.MainWindow"
        Title="Media Viewer" Height="450" Width="850" Closing="Window_Closing">
    <Grid>

        <local:UserControl1 x:Name="mediaDetailsControl" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="300" Width="497"/>
        <GridSplitter HorizontalAlignment="Left" Margin="524,0,0,0" Width="8"/>
        <Button x:Name="Media_Button" Content="Find Media" HorizontalAlignment="Left" Margin="251,363,0,0" VerticalAlignment="Top" Width="75" Click="Media_Button_Click"/>
        <Button x:Name="Exit_Button" Content="Exit" HorizontalAlignment="Left" Margin="352,363,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Button_Click"/>
        <local:LibraryTreeControl x:Name="libraryTreeControl" HorizontalAlignment="Left" Height="400" Margin="537,10,0,0" VerticalAlignment="Top" Width="295"/>
        <Button Content="Edit Library ..." HorizontalAlignment="Left" Margin="142,363,0,0" VerticalAlignment="Top" Width="82" Click="Library_Button_Click"/>
        <ProgressBar x:Name="workProgressBar" HorizontalAlignment="Left" Height="12" Margin="40,325,0,0" VerticalAlignment="Top" Width="387" Visibility="Hidden"/>
        <Button x:Name="Config_Button" Content="Config ..." HorizontalAlignment="Left" Margin="40,363,0,0" VerticalAlignment="Top" Width="75" Click="Config_Button_Click"/>

    </Grid>
</Window>
